
<%= form_for @note do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: 'Title...', class: "form-control input-sm" %><br>
  <br>
  <%= f.label :description %>
  <br>
  <%= f.text_area :info, placeholder: "Add a new note...", rows: 10 %><br><br>
  <%= f.select :category_id, @categories %><br><br>
  <%= f.submit 'Send' %>
<% end %><br><br>

